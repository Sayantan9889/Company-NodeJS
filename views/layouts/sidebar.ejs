<style>
    .profileImg img {
        width: 43px !important;
        height: 43px !important;
    }
</style>

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/" class="brand-link">
        <img src="/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
            style="opacity: .8">
        <span class="brand-text font-weight-light">Company</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image profileImg">
                <img src="<%= data.user.image %>" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a class="d-block"><%= data.user.name %> (<%= data.user.role %>)</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
                <li class="nav-item <%= data.url ? (data.url.includes('home') ? 'menu-open' : '') : '' %>">
                    <a class="nav-link <%= data.url ? (data.url.includes('home') ? 'active' : '') : '' %>">
                        <i class="nav-icon fa fa-home"></i>
                        <p>
                            Home Content
                            <i class="right fas fa-angle-left"></i>
                            <span class="badge badge-info right">3</span>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/home/banner" class="nav-link <%= data.url ? (data.url.includes('banner') ? 'active' : '') : '' %>">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Banner</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/home/service" class="nav-link <%= data.url ? (data.url.includes('home/service') ? 'active' : '') : '' %>">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Services</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/home/testimonials" class="nav-link <%= data.url ? (data.url.includes('home/testimon') ? 'active' : '') : '' %>">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Testimonials</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item <%= data.url ? (data.url.includes('about-us') ? 'menu-open' : '') : '' %>">
                    <a class="nav-link <%= data.url ? (data.url.includes('about-us') ? 'active' : '') : '' %>">
                        <i class="nav-icon fa fa-info-circle"></i>
                        <p>
                            About Us
                            <i class="right fas fa-angle-left"></i>
                            <span class="badge badge-info right">2</span>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/about-us/about" class="nav-link <%= data.url ? (data.url.includes('about-us/about') ? 'active' : '') : '' %>">
                                <i class="far fa-circle nav-icon"></i>
                                <p>About</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/about-us/our-team" class="nav-link <%= data.url ? (data.url.includes('about-us/our-team') ? 'active' : '') : '' %>">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Our Team</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item <%= data.url ? (data.url.includes('contacts') ? 'menu-open' : '') : '' %>">
                    <a class="nav-link <%= data.url ? (data.url.includes('contacts') ? 'active' : '') : '' %>">
                        <i class="nav-icon fa fa-address-book"></i>
                        <p>
                            Contacts
                            <i class="right fas fa-angle-left"></i>
                            <span class="badge badge-info right">2</span>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/contacts/contact-info" class="nav-link <%= data.url ? (data.url.includes('contacts/contact-info') ? 'active' : '') : '' %>">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Contact Info</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/contacts/contact-requests" class="nav-link <%= data.url ? (data.url.includes('contacts/contact-requests') ? 'active' : '') : '' %>">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Contact Request</p>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>