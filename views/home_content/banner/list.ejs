<%- include('../../layouts/head.ejs') %>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    <!-- Preloader -->
    <%- include('../../layouts/loader.ejs') %>
    <!-- /.Preloader -->

    <!-- Navbar -->
    <%- include('../../layouts/navbar.ejs') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <%- include('../../layouts/sidebar.ejs') %>
    <!-- /.Main Sidebar Container -->


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Content Header (breadcrump) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Banner</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                <li class="breadcrumb-item active">Banner</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">

          <a href="/home/banner/add" class="btn btn-info"> Add Banner</a>
          <table class="table mt-2">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">status</th>
                <th colspan="2">action</th>
              </tr>
            </thead>
            <tbody>

              <% data.bannerList.forEach((banner, index)=> {%>
              <tr>
                <th scope="row">
                  <%= index+1 %>
                </th>
                <td style="padding-bottom: 0.36rem;"><img style="height: 50px; width: 50px; border-radius: 50%;" src="<%= banner.image %>" alt="">
                </td>
                <td style="padding-bottom: 0.36rem;">
                  <%= banner.title %>
                </td>
                <td style=" padding-bottom: 0.36rem;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        display: -webkit-box;
                        line-clamp: 2;
                        -webkit-line-clamp: 2;
                        -webkit-box-orient: vertical;">
                  <%= banner.content %>
                </td>
                <td style="padding-bottom: 0.36rem;"><a href="/home/banner/active-deactive/<%=banner._id%>" class="btn btn-warning">
                    <%= banner.isActive ? 'Deactive' : 'Active' %>
                  </a></td>
                <td style="padding-bottom: 0.36rem;"><a href="/home/banner/update/<%=banner._id%>" class="btn btn-success">Edit</a>
                </td>
                <td style="padding-bottom: 0.36rem;"><a class="btn btn-danger" onclick="deleteBanner('<%= banner._id %>')"> Delete</a></td>
              </tr>
              <% }) %>

            </tbody>
          </table>

        </div><!-- /.container-fluid -->
      </section>
      <!-- /. Main content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- footer -->
    <%- include('../../layouts/footer.ejs') %>
    <!-- /.footer -->

    <script>
      function deleteBanner(id) {
        if (confirm('Are you sure you want to delete this banner?')) {
          fetch(`/home/banner/delete/${id}`, {
            method: 'DELETE'
          }).then(response => {
            location.reload(); // Reload to reflect changes
            console.log("response: ", response);
          }).catch(error => console.error('Error:', error));
        }
      }
    </script>
  </div>
  <!-- ./wrapper -->
</body>

</html>