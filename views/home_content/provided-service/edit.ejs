<%- include('../../layouts/head.ejs') %>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    <!-- Preloader -->
    <%- include('../../layouts/loader.ejs') %>
    <!-- /.Preloader -->

    <!-- Navbar -->
    <%- include('../../layouts/navbar.ejs') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <%- include('../../layouts/sidebar.ejs') %>
    <!-- /.Main Sidebar Container -->


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Content Header (breadcrump) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Services</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/home/service">Services</a></li>
                <li class="breadcrumb-item active">Add</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">

          <form action="/home/service/edit/<%= data.service._id%>" method="post" enctype="multipart/form-data">
            <h3 style="text-align: center; text-decoration: underline;">Update Service</h3>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Image</label>
              <input type="file" class="form-control" name="image" >
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Hover Colour</label>
              <input type="text" class="form-control" name="hover_color" placeholder="Enter a colour of service card on hover" value="<%= data.service.hover_color %>">
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Heading</label>
              <input type="text" class="form-control" name="heading" placeholder="Enter a title of service"  value="<%= data.service.heading %>">
            </div>
            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">Content</label>
              <input type="text" class="form-control" name="content" placeholder="Enter a breif description of the service"  value="<%= data.service.content %>">
            </div>

            <button type="submit" class="btn btn-primary">Add Service</button>

          </form>

        </div><!-- /.container-fluid -->
      </section>
      <!-- /. Main content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- footer -->
    <%- include('../../layouts/footer.ejs') %>
    <!-- /.footer -->

  </div>
  <!-- ./wrapper -->
</body>

</html>