<%- include('../../layouts/head.ejs') %>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    <!-- Preloader -->
    <%- include('../../layouts/loader.ejs') %>
    <!-- /.Preloader -->

    <!-- Navbar -->
    <%- include('../../layouts/navbar.ejs') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <%- include('../../layouts/sidebar.ejs') %>
    <!-- /.Main Sidebar Container -->


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Content Header (breadcrump) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">About Us</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                <li class="breadcrumb-item active"><a>About</a></li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">

          <a href="/about-us/about/update/<%= data.aboutUs._id %>" class="btn btn-info">Edit</a>
          <form>
            <h3 style="text-align: center; text-decoration: underline;">About Us</h3>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Heading</label>
              <input type="text" class="form-control" name="heading" value="<%= data.aboutUs.heading %>" disabled>
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Title</label>
              <input type="text" class="form-control" name="title" value="<%= data.aboutUs.title %>" disabled>
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Sub-title</label>
              <input type="text" class="form-control" name="sub_title" value="<%= data.aboutUs.sub_title %>" disabled>
            </div>
            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">Content</label>
              <textarea id="aboutUs-content-view" class="form-control" name="content" rows="6" disabled><%= data.aboutUs.content %></textarea>
            </div>
          </form>

        </div><!-- /.container-fluid -->
      </section>
      <!-- /. Main content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- footer -->
    <%- include('../../layouts/footer.ejs') %>
    <!-- /.footer -->

  </div>
  <!-- ./wrapper -->

  <!-- Configure for TinyMice Editor -->
  <script>
    tinymce.init({
      selector: 'textarea#aboutUs-content-view',
      menubar: false,
      plugins: ['wordcount'],
      toolbar: '',
      tinycomments_mode: false,
      ai_request: false,
      branding: false, // Hides the "Built with TinyMCE" text
      readonly: true,
      init_instance_callback: function(editor) {
        editor.getBody().classList.add('disabled'); // Add a class to the editor body
        
        // Apply custom styles
        editor.getBody().style.cursor = 'default';
        editor.getBody().style.backgroundColor = '#E8E8E8';
      }
    });
  </script>
</body>

</html>